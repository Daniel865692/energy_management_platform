# African Energy Monitoring Platform - Environment Variables Template
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration - Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Database Configuration - MongoDB
MONGODB_URI=mongodb://localhost:27017/energy_monitoring
MONGODB_DB_NAME=energy_monitoring

# Database Configuration - InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-organization
INFLUXDB_BUCKET=energy-data

# Database Configuration - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=energy_monitoring

# Database Configuration - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=energy_monitoring

# ThingSpeak Configuration
THINGSPEAK_API_KEY=your-thingspeak-api-key
THINGSPEAK_CHANNEL_ID=your-channel-id

# Weather API Configuration
WEATHER_API_KEY=your-openweather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Security Configuration
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key
ENCRYPTION_KEY=your-encryption-key

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Cloud Storage Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=energy-data-bucket

AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=energy-data

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ESP32 Configuration
ESP32_API_ENDPOINT=http://localhost:3000/api
ESP32_DEVICE_ID=esp32-energy-monitor-001
ESP32_UPDATE_INTERVAL=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
